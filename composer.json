{
    "name": "site4/reports",
    "description": "Health tracking app",
    "type": "project",
    "authors": [
        {
            "name": "User",
            "email": "user@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "tecnickcom/tcpdf": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.0",
        "respect/validation": "^2.4",
        "symfony/cache": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "12.4.4",
        "friendsofphp/php-cs-fixer": "v3.91.0",
        "phpstan/phpstan": "2.1.32",
        "phpmd/phpmd": "^2.15",
        "infection/infection": "^0.31.9",
        "filp/whoops": "^2.15"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "stan": "php vendor/bin/phpstan analyse -l 7 -c phpstan.neon",
        "mess": "php vendor/bin/phpmd src/Controller,src/Model,src/Service,src/Config text phpmd.xml",
        "infect": "php vendor/bin/infection --threads=4",
        "csfix:check": "php vendor/bin/php-cs-fixer fix --dry-run -v",
        "csfix": "php vendor/bin/php-cs-fixer fix -v",
        "check:all": [
            "@csfix:check"
        ],
        "check:full": [
            "@check:all",
            "@infect"
        ],
        "hook:install": [
            "php -r \"if(!is_dir('.githooks')){mkdir('.githooks', 0755, true);} copy('scripts/pre-commit.php','.githooks/pre-commit');\"",
            "git config core.hooksPath .githooks",
            "php -r \"chmod('.githooks/pre-commit', 0755);\""
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
